<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layoutTop">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/itemImg"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_gravity="center"
                android:src="@drawable/bus5"
                app:border_color="@android:color/holo_green_light"
                android:layout_marginTop="5dp"
                app:border_width="3dp" />

            <TextView
                android:id="@+id/itemTitelTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Bus Service"
                android:gravity="center"


                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/itemDescTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="Desceription fdfjsd "
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:id="@+id/itemBtn1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Book now"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/itemImg1"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:layout_gravity="center"
                android:src="@drawable/food"
                app:border_color="@android:color/holo_green_light"
                android:layout_marginTop="5dp"
                app:border_width="3dp" />

            <TextView
                android:id="@+id/itemTitelTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Food Service"
                android:gravity="center"


                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/itemDescTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Desceription fasfa a"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/border"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:id="@+id/itemBtn"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Shop now"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below= "@+id/layoutTop">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/itemImg3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"

                    android:layout_gravity="center"
                    android:src="@drawable/map"
                    app:border_color="@android:color/holo_green_light"
